<h1>Feeds</h1>

<%= link_to 'New Feed', new_feed_path %>

<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
    <tr>
      <td>
        <%= feed.title %>
      </td>
      <td>
        <%= feed.url %>
      </td>
      <td>
        <%= feed.description %>
      </td>
      <td>
        <%= link_to 'Show', feed %>
      </td>
      <td>
        <%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>